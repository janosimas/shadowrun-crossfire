<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" navigatedTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="{{ race }}" icon="" class="action-bar"></ActionBar>
    </Page.actionBar>
    <GridLayout columns="auto, *" rows="auto, auto, auto, auto" verticalAlignment="top">
        <Label text="Hit Points: " textWrap="true" col="0" row="0"
               class="blue-border blue-text" />
        <Label text="{{ hit_points }}" textWrap="true" col="1" row="0" 
               class="text-center text-primary blue-border white-text"/>

        <Label text="Nuyen: " textWrap="true" col="0" row="1"
               class="blue-border blue-text"/>
        <Label text="{{ nuyen }}" textWrap="true" col="1" row="1"
               class="text-center text-primary blue-border white-text"/>

        <Label text="Cards: " textWrap="true" col="0" row="2"
               class="blue-border blue-text"/>
        <Label text="{{ cards }}" textWrap="true" col="1" row="2"
               class="text-center text-primary blue-border white-text"/>
    </GridLayout>
</Page>